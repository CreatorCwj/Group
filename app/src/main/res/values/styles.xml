<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--bar上面的部分的颜色-->
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <!--中间背景色-->
        <item name="android:windowBackground">@color/windowBackground</item>
        <!--底部导航栏颜色-->
        <item name="android:navigationBarColor">@color/navigationBarColor</item>

        <!--控件标记颜色和点击效果颜色(如checkbox等),往往设置了背景的话就没有作用了-->
        <item name="android:colorControlHighlight">@color/navigationBarColor</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!--datePicker-->
        <item name="android:datePickerDialogTheme">@style/datePickerTheme</item>
    </style>

    <!-- 欢迎页风格-->
    <style name="WelcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!--datePickerTheme-->
    <style name="datePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerStyle">@style/datePickerStyle</item>
    </style>
    <!--datePickerStyle-->
    <style name="datePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
    </style>

    <!--透明无边框dialog样式-->
    <style name="dialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 主界面底部RadioButton样式-->
    <style name="MainRadioViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="com.group:imageWidth">25dp</item>
        <item name="com.group:imageHeight">25dp</item>
        <item name="com.group:radioTextSize">13sp</item>
        <item name="android:background">#F5F5F5</item>
        <item name="com.group:textBackground">@color/main_radio_text_colors</item>
    </style>
</resources>
