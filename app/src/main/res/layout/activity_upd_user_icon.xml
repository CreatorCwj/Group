<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.widget.CustomToolBar
        android:id="@+id/upd_user_icon_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backVisibility="true"
        app:rightText="上传"
        app:titleText="上传头像" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/upd_user_icon_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_user_icon"
        app:riv_border_color="#86DFD7"
        app:riv_border_width="4dp"
        app:riv_oval="true" />

    <Button
        android:id="@+id/upd_user_icon_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/function_button_height"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="选择图片"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>
