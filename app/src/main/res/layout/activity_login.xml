<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.widget.CustomToolBar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backVisibility="true"
        app:rightText="注册"
        app:searchVisibility="false"
        app:textIconVisibility="false"
        app:titleText="登录" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="16dp"
        android:background="@color/dividerColor" />

    <com.widget.CancelableEditView
        android:id="@+id/login_username_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/function_button_height"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        app:cancelIcon="@drawable/close_gray_dark"
        app:editTextColor="@color/black"
        app:editTextSize="15sp"
        app:hintColor="@color/gray"
        app:hintText="手机号"
        app:maximumLength="11"
        app:textType="number" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/dividerColor" />

    <com.widget.CancelableEditView
        android:id="@+id/login_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/function_button_height"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        app:cancelIcon="@drawable/close_gray_dark"
        app:editTextColor="@color/black"
        app:editTextSize="15sp"
        app:hintColor="@color/gray"
        app:hintText="密码"
        app:textType="password" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/dividerColor" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/function_button_height"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/forget_pwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_press"
            android:text="忘记密码"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/quick_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_press"
            android:text="手机号快捷登录"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>
