<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <com.widget.radio.RadioView
        android:id="@+id/send_to_session_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/icon_press"
        android:padding="10dp"
        app:canChecked="false"
        app:imageBackground="@drawable/wxsession"
        app:imageBottom="8dp"
        app:imageHeight="60dp"
        app:imageWidth="60dp"
        app:radioText="发送给朋友"
        app:radioTextColor="@color/gray_dark"
        app:radioTextSize="15sp" />

    <com.widget.radio.RadioView
        android:id="@+id/send_to_timeline_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/icon_press"
        android:padding="10dp"
        app:canChecked="false"
        app:imageBackground="@drawable/wxtimeline"
        app:imageBottom="8dp"
        app:imageHeight="60dp"
        app:imageWidth="60dp"
        app:radioText="分享至朋友圈"
        app:radioTextColor="@color/gray_dark"
        app:radioTextSize="15sp" />
</LinearLayout>