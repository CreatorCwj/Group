<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/my_remark_item_merchant_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_press"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="13dp">

        <ImageView
            android:id="@+id/my_remark_item_category_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/my_remark_item_merchant_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="彤德莱火锅(大学城店)"
            android:textColor="@color/gray_dark"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/arrow_right" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/dividerColor" />

    <RatingBar
        android:id="@+id/my_remark_item_rating"
        style="@style/MyRatingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="2"
        android:stepSize="1" />

    <TextView
        android:id="@+id/my_remark_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:lineSpacingExtra="6dp"
        android:singleLine="false"
        android:text="adadasdsda"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <com.widget.remarkImagesLayout.RemarkImagesLayout
        android:id="@+id/my_remark_item_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_remark_item_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="2016-04-16"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_remark_item_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="23dp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="修改"
            android:textColor="@color/gray_dark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/my_remark_item_del_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="删除"
            android:textColor="@color/gray_dark"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/dividerColor" />
</LinearLayout>